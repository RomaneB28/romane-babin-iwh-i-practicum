doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/css/style.css')
  body
    div.container
      h1 Add New Custom Object
      
      p
        a(href='/') Return to the homepage
      
      form(action='/update-cobj', method='POST')
        div.form-group
          label(for='name') name:
          input(type='text', id='name', name='name', required)
        
        div.form-group
          label(for='couleur') couleur:
          input(type='text', id='couleur', name='couleur', required)
        
        div.form-group
          label(for='race') race:
          input(type='text', id='race', name='race', required)
        
        button(type='submit') Add Object